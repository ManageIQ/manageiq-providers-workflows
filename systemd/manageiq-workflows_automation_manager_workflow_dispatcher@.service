[Unit]
PartOf=manageiq-workflows_automation_manager_workflow_dispatcher.target
[Install]
WantedBy=manageiq-workflows_automation_manager_workflow_dispatcher.target
[Service]
WorkingDirectory=/var/www/miq/vmdb
Environment=BUNDLER_GROUPS=manageiq_default,ui_dependencies
EnvironmentFile=/etc/default/manageiq*.properties
ExecStart=/usr/bin/ruby lib/workers/bin/run_single_worker.rb ManageIQ::Providers::Workflows::AutomationManager::WorkflowDispatcher --heartbeat --guid=%i
User=manageiq
Restart=no
Type=notify
Slice=manageiq-workflows_automation_manager_workflow_dispatcher.slice
